<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <a href="/blogs/<%=blog._id%>"><img class="ui rounded image" src="<%= blog.image %>" alt="image"></a>
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%=blog._id%>"><%= blog.title %></a>
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0, 100) %>....</p>
                    </div>
                    <div class="extra">
                        <a class="ui basic black button" href="/blogs/<%=blog._id%>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ./partials/footer %>